<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppTeczkaAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/redish</item>
        <item name="colorPrimaryVariant">@color/redish</item>
        <item name="colorOnPrimary">@color/redish</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_2</item>
        <item name="colorSecondaryVariant">@color/grey_2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/grey_1</item>
    </style>
    <style name="borderText">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">28sp</item>
        <item name="android:shadowColor">@color/redish</item>
        <item name="android:shadowRadius">15</item>
    </style>
</resources>